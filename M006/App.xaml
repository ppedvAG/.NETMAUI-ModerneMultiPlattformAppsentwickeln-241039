<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:M006"
             x:Class="M006.App">
    <Application.Resources>
		<!--ResourceDictionary-->
		<!--Resourcen extern ablegen (separate Datei)-->
		<!--Name.xaml, hier in App.xaml einbinden-->
        <ResourceDictionary>
			<!--Um mehrere RDs einzubinden, muss MergedDictionaries verwendet werden-->
			<!--Rechtsklick -> Add -> New Item -> .NET MAUI -> ResourceDictionary-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Extern.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
